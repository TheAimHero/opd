{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",

    /* Base Options: */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,

    /* Strictness */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,

    /* Bundled projects */
    "lib": ["dom", "dom.iterable", "ES2022"],
    "noEmit": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,

    /* Path Aliases */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },

  "include": ["src", "drizzle.config.ts"],

  "exclude": ["node_modules", "dist"]
}
