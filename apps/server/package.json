    "@orpc/client": "^1.5.0",
    "@orpc/server": "^1.5.0",
    "better-auth": "^1.3.4",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.2",
    "http-status-codes": "^2.3.0",
    "postgres": "^3.4.7",
    "ws": "^8.18.3",
    "zod": "^4.0.2",
    "zod-validation-error": "^4.0.1"
  },
  "devDependencies": {
    "@types/ws": "^8.18.1",
    "drizzle-kit": "^0.31.2",
    "tsdown": "^0.12.9",
    "typescript": "^5.8.2",
    "wrangler": "^4.23.0"
